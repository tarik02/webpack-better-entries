{
  "compilerOptions": {
    "moduleResolution": "NodeNext",
    "module": "ESNext",
    "target": "ESNext",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true
  },
  "include": [
    "src/**/*"
  ]
}
